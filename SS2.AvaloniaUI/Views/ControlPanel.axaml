<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SS2.AvaloniaUI.Views.ControlPanel">
  
  <Panel>
    <Panel.Styles>
      <Style Selector="Button.controlButton">
        <Setter Property="Cursor" Value="Hand"></Setter>
      </Style>
    </Panel.Styles>
    <DockPanel>
      <StackPanel>
        <ScrollViewer Name="ResponsesScrollViewer" Height="110" VerticalScrollBarVisibility="Hidden">
        <ItemsControl Name="MyControlPanelItemsControl" Items="{Binding Items}">
          <!-- <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <Panel>
              </Panel>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel> -->
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <TextBlock Classes="screen" Text="{Binding}"></TextBlock>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
      </StackPanel>
      <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
        <Button Classes="controlButton" Height="55" Width="20">
          <TextBlock Text="Tri-OS"></TextBlock>
        </Button>
        <Button Classes="controlButton" Height="58" Width="20" Padding="2" Command="{Binding StartResetCommand}">
          <TextBlock Text="RESET" TextWrapping="Wrap"></TextBlock>
        </Button>
      </StackPanel>
    </DockPanel>
  </Panel>
</UserControl>

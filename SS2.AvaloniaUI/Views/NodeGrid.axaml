<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:uc="clr-namespace:AvalonSS2.Views;assembly=SS2.AvaloniaUI"
              xmlns:vm="using:SS2.AvaloniaUI.ViewModels"
             x:Class="SS2.AvaloniaUI.Views.NodeGrid">

  <!--
  <Design.DataContext>
    <vm:NodeGridViewModel />
  </Design.DataContext>
  -->
 
  <StackPanel>
    <!-- <Grid ShowGridLines="True" Background="Orange" Width="120" Height="150" ColumnDefinitions="30,30,30,30" RowDefinitions="30,30,30,30,30"  Margin="4">
      <TextBlock  Grid.Row="1" Grid.Column="2" Text="4" Grid.RowSpan="2" Grid.ColumnSpan="2"></TextBlock>
    </Grid> -->
    <StackPanel.Styles>
      <Style Selector="ItemsControl /template/ ContentPresenter">
        <Setter Property="Grid.Row" Value="1"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Width" Value="100"></Setter>
      </Style>
      <Style Selector="ItemsControl.ItemTemplate /template/ ContentPresenter">
        <Setter Property="Grid.Row" Value="1"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Width" Value="100"></Setter>
      </Style>
      <Style Selector="DataTemplate /template/ ContentPresenter">
        <Setter Property="Grid.Row" Value="1"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Width" Value="100"></Setter>
      </Style>
      <Style Selector="TextBlock.myTextBlockClass /template/ ContentPresenter">
        <Setter Property="Grid.Row" Value="1"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Width" Value="100"></Setter>
      </Style>
      <Style Selector="Grid#MyGrid /template/ ContentPresenter">
        <Setter Property="Grid.Row" Value="1"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Width" Value="100"></Setter>
      </Style>
    </StackPanel.Styles>
      <ItemsControl Name="MyItemsControl" Items="{Binding Items}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <Grid Name="MyGrid" Width="150" Height="120" ColumnDefinitions="32,32,32,32,32" RowDefinitions="34,34,34,34"  Margin="4">
          </Grid>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <!-- <TextBlock Classes="myTextBlockClass" Grid.Row="2" Grid.Column="3" Text="_" Grid.RowSpan="2" Grid.ColumnSpan="2">
            </TextBlock> -->
            <Button Classes="node" Classes.activated="{Binding Activated}" Grid.Row="3" Grid.Column="{Binding X}" Content="{Binding X}" CommandParameter="{Binding}" Command="{Binding ElementName=MyItemsControl, Path=DataContext.OnNodeClickCommand}">
            <Button.Styles>
              <Style Selector="Button.node">
                <Setter Property="Height" Value="16"></Setter>
                <Setter Property="Width" Value="16"></Setter>
                <Setter Property="Cursor" Value="Hand"></Setter>
                <Setter Property="Background">
                  <Setter.Value>
                    <SolidColorBrush Color="#00FEBF" Opacity="0.2"/>
                  </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush">
                  <Setter.Value>
                    <SolidColorBrush Color="#00FEBF" Opacity="1"/>
                  </Setter.Value>
                </Setter>
                <Setter Property="BorderThickness" Value="2"></Setter>
                <Setter Property="Padding" Value="30 10 10 10"></Setter>
              </Style>

              <Style Selector="Button.node /template/ ContentPresenter">
              <Setter Property="CornerRadius" Value="0"/>
              </Style>

              <Style Selector="Button.node.failed">
                <Setter Property="Margin" Value="10"/>
              </Style>

              <Style Selector="Button.node.activated">
                <Setter Property="Background" Value="Red"/>
              </Style>

              <Style Selector="Button.node.succeeded">
                <Setter Property="Background">
                  <Setter.Value>
                    <SolidColorBrush Color="#00FEBF"/>
                  </Setter.Value>
                </Setter>
              </Style>
            </Button.Styles>
          </Button>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </StackPanel>

</UserControl>
